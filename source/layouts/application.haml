!!! Strict
%html
  %head
    %meta(charset="utf-8")
    %title
      = "#{yield_content(:page_title)} - Higher Order Heroku"
    = stylesheet_link_tag "application", :media => "all"

    %link{rel:"alternate", type: "application/atom+xml", title: "Higher Order Heroku article feed", href: "/articles.atom"}
    %meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no")

    <!--[if lt IE 9]>
    <script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    
    = javascript_include_tag "application"
    = partial 'ga'

  %body
    .wrapper
      %header
        %h1
          %a(href="/") Higher Order Heroku
        %p Developing applications the Heroku way.

      %section
        = yield

      %footer
        %p Higher Order Heroku is maintained by <a href="https://twitter.com/rwdaigle">@rwdaigle</a>
        %p
